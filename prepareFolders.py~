def prepareFolders(filePath):
    ## deletion
    #
    # old output files
    if filePath != '':
        call(["find " + filePath + " -name '*.out' -exec rm '{}' \; -print"])

        # graphs
        call(["find " + filePath + " -name 'w.png' -exec rm '{}' \; -print -or -name \".*~\" -exec rm {} \; -print"])

        # Emacs backup files (they can interfere with some of the functions in
        # the PRQL algorithm)
        call(["find " + filePath + " -name '*~' -exec rm '{}' \; -print -or -name \".*~\" -exec rm {} \; -print"])
        #
        ## end of deletion
    else:
        print 'Please inform the path'
